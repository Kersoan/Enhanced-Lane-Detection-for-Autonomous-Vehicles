def grayscale(img):
    return cv2.cvtColor(img, cv2.COLOR_RGB2GRAY)

def canny(img):
    gray = grayscale(img)
    return cv2.Canny(gray, 50, 120)

canny_images = [canny(img) for img in roi_images]

